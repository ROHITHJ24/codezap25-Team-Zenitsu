// Load environment variables from .env file



import dotenv from 'dotenv';
dotenv.config();

// Access environment variables

const OPENAI_API_KEY = process.env.OPENAI_API_KEY;
const DATABASE_URL = process.env.DATABASE_URL;

// Optional: validate that required environment variables are present

if (!OPENAI_API_KEY || !DATABASE_URL) {
  throw new Error("Missing required environment variables: OPENAI_API_KEY or DATABASE_URL");
}

// Export variables for use in other modules

export { OPENAI_API_KEY, DATABASE_URL };
